<Window x:Class="Facturacion_Tostatronic.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facturacion_Tostatronic.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Progresso de tarea" Height="200" Width="400" WindowStyle="None">
    <Grid>
        <ProgressBar Minimum="0" Maximum="100" Value="0" Height="35" Margin="20" Name="pbStatus" />
        <TextBlock Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
