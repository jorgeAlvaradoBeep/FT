<Window x:Class="Facturacion_Tostatronic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Facturacion_Tostatronic" xmlns:vm="clr-namespace:Facturacion_Tostatronic.ViewModels"
        mc:Ignorable="d"
        Title="Facturacion Tostatronic" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <vm:MenuVM x:Key="invoiceCreationVM"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource invoiceCreationVM}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Mode="Standard" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Margin="5,5,0,0" Height="46">
            <TextBlock Text="Facturacion Tostatronic" FontSize="38px"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </materialDesign:ColorZone>
        <Button Height="50" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding CreateInvoiceCommand}">
            <StackPanel>
                <Image Source="/Images/invoice.png" Width="20" Height="20"/>
                <TextBlock Text="Crear Factura" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding InvoiceConfigCommand}">
            <StackPanel>
                <Image Source="/Images/config.png" Width="20" Height="20"/>
                <TextBlock Text="Config. Factura" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding SeeInvoiceCommand}">
            <StackPanel>
                <Image Source="/Images/search.png" Width="20" Height="20"/>
                <TextBlock Text="Ver Factura" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding PrinterConfigCommand}">
            <StackPanel>
                <Image Source="/Images/print.png" Width="20" Height="20"/>
                <TextBlock Text="Configurar Impresora" FontSize="14"/>
            </StackPanel>
        </Button>
        
        
        <!--Menu del PDV-->
        <Button Height="50" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding CreateSaleCommand}">
            <StackPanel>
                <Image Source="/Images/sale.png" Width="20" Height="20"/>
                <TextBlock Text="Generar Venta" FontSize="14"/>
            </StackPanel>
        </Button>

        <!--Menu de productos-->
        <Button Height="50" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding CreateProductsCommand}">
            <StackPanel>
                <Image Source="/Images/addProduct.png" Width="20" Height="20"/>
                <TextBlock Text="Agregar Producto" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding CreateProductsListCommand}">
            <StackPanel>
                <Image Source="/Images/list.png" Width="20" Height="20"/>
                <TextBlock Text="Lista Productos" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding SetPSIDCommand}">
            <StackPanel>
                <Image Source="/Images/set.png" Width="20" Height="20"/>
                <TextBlock Text="Set ID PS" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding CreateNewProductsListCommand}">
            <StackPanel>
                <Image Source="/Images/list.png" Width="20" Height="20"/>
                <TextBlock Text="New Product List" FontSize="14"/>
            </StackPanel>
        </Button>
        <Button Height="50" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Stretch" Margin="5px" Command="{Binding UpdateDistributorPriceNPCommand}">
            <StackPanel>
                <Image Source="/Images/upload.png" Width="20" Height="20"/>
                <TextBlock Text="Precios Distribuidor NP" FontSize="10"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
